{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
	"module": "esnext",
    "target": "esnext",
    "jsx": "react-native",
    "types": ["three"],
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
